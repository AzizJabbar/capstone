<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxWidth="230dp"
    android:background="@color/cornflower_blue"
    tools:context=".ui.ScreenSlidePageFragment">

    <TextView
        android:id="@+id/tv_makanan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nama Makanan" />

    <TableLayout
        app:layout_constraintTop_toBottomOf="@id/tv_makanan"
        android:layout_width="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:id="@+id/tv_energi_label"
                android:padding="3dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total energi"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_energi"
                android:gravity="end"
                android:layout_weight="1"

                android:layout_gravity="end"
                android:layout_width="match_parent"
                android:padding="3dp"
                android:textColor="@color/white"
                tools:text="500 Kkal" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_karbohidrat_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="Karbohidrat total"
                android:padding="3dp"

                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_karbohidrat"
                android:layout_gravity="center_vertical|end"
                android:gravity="end"
                android:layout_weight="1"

                android:padding="3dp"
                android:textColor="@color/white"
                tools:text="250 gram" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_lemak_label"
                android:layout_width="wrap_content"
                android:padding="3dp"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:textColor="@color/white"

                android:text="Lemak total"/>

            <TextView
                android:id="@+id/tv_lemak"
                android:textColor="@color/white"
                android:padding="3dp"
                android:layout_weight="1"

                android:layout_gravity="center_vertical|end"
                android:gravity="end"


                tools:text="100 gram" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tv_protein_label"
                android:textColor="@color/white"
                android:padding="3dp"

                android:layout_weight="1"

                android:text="Protein" />

            <TextView
                android:id="@+id/tv_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:padding="3dp"
                android:layout_weight="1"

                android:textColor="@color/white"
                tools:text="125 gram" />
        </TableRow>

    </TableLayout>


